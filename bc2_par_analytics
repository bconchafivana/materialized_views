CREATE VIEW bc2_par_analytics AS (
SELECT cp.client_rut, cp.debtor_rut, cp.cede_proportion, cp.sum_amount as sum_amount_180days, cp.factorings,
 ncp.nc_proportion, ncp.nc_amount, ncp.total_amount, 
oep.n_ops, oep.avg_delta_ops, oep.delta_last_op,
pp.payed_with_op, pp.avg_mora_days, pp.total_finance_amount, pp.client_payed_finance_amount, pp.debtor_payed_finance_amount, pp.n_financed_docs, pp.last_payment
FROM bc_cede_par cp
JOIN bc_notas_credito_par ncp ON ncp.client_rut = cp.client_rut AND ncp.debtor_rut = cp.debtor_rut
JOIN bc_ops_entre_par oep ON oep.client_rut = cp.client_rut AND oep.debtor_rut = cp.debtor_rut
JOIN bc_payments_par pp ON pp.client_rut = cp.client_rut AND pp.debtor_rut = cp.debtor_rut
)
